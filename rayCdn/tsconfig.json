{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "lib": ["ESNext", "DOM"],
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmitOnError": false,
    "jsx": "react",
    "paths": {
      "ray": ["./node_modules/@ray-js/ray"],
      "@/*": ["./src/*"]
    },
    "typeRoots": ["./typings"]
  },
  "include": ["src/**/*.*", "typings"],
  "exclude": ["node_modules", "dist", "public"]
}
